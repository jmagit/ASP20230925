
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div id="ajaxRslt">
</div>
<nav aria-label="Page navigation">
    <ul class="pagination">
        @for(int i = 0; i < ViewBag.numPages; i++) {
            <li class="page-item">
                <input type="button" value="@(i + 1)" class="page-link" />
            </li>
        }
    </ul>
</nav>

@section Scripts {
    <script type="text/javascript">
        const traePagina = (num) => {
            fetch(`/api/categorias?page=${num}&size=@ViewBag.size`)
                .then(data => data.json().then(
                    listado => {
                        let cad = '<ul>'
                        for (let e of listado) {
                            cad += `<li><a href='#' onClick='traeElement(${e.ProductCategoryID})'>${e.Name}</a></li>`
                        }
                        cad += '</ul>'
                        $("#ajaxRslt").html(cad)
                    }
                )
            )
        }
        const traeElement = (id) => {
            fetch(`/api/categorias/${id}`)
                .then(data => data.json().then(
                    ele => {
                        let cad = `<p>${ele.ProductCategoryID }: ${ele.Name}</p`
                        $("#ajaxRslt").html(cad)
                    }
                )
            )
        }
        $('.page-link').click(ev => traePagina(+ev.target.value - 1))
        traePagina(@ViewBag.page)
    </script>

}

